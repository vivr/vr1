<aside class="sidebar">
  <div class="sidebar__content">
    <h4>All Posts</h4>
    {% set navPages = collections.posts | eleventyNavigation | reverse %}
      <ul>
      {%- for entry in navPages %}
        <li{% if entry.url == page.url %} class="active"{% endif %}>
          <a href="{{ entry.url }}">{{ entry.title }}</a> 
        </li>
      {%- endfor %}
      </ul>
  </div>
</aside>